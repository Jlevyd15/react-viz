{
	"name": "react-app-viz",
	"displayName": "React App Viz",
	"description": "React application vizualizer",
	"version": "0.0.1",
	"enableProposedApi": true,
	"engines": {
		"vscode": "^1.32.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:reactAppViz"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "react-app-viz",
					"title": "React App Viz",
					"icon": "media/logo-light.svg"
				}
			]
		},
		"views": {
			"react-app-viz": [
				{
					"id": "reactAppViz",
					"name": "React App Viz"
				}
			]
		},
		"commands": [
			{
				"command": "reactAppViz.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "reactAppViz.openFile",
				"title": "Open File",
				"icon": {
					"light": "resources/light/edit.svg",
					"dark": "resources/dark/edit.svg"
				  }
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "reactAppViz.refreshEntry",
					"when": "view == reactAppViz",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "reactAppViz.openFile",
					"when": "view == reactAppViz && viewItem == dependency",
					"group": "inline"
				}
			]
		},
		"configuration": [
			{
				"title": "React App Viz",
				"properties": {
					"reactAppViz.rootComponent": {
						"type": "string",
						"default": ""
					},
					"reactAppViz.componentsPath": {
						"type": "string",
						"default": ""
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"@types/mkdirp": "^0.5.2",
		"@types/node": "*",
		"@types/rimraf": "^2.0.2",
		"tslint": "^5.11.0",
		"typescript": "^2.1.4",
		"vscode": "^1.1.22"
	},
	"dependencies": {
		"@babel/parser": "^7.4.4",
		"ftp": "^0.3.10",
		"glob": "^7.1.3",
		"jsonc-parser": "^0.4.2",
		"mkdirp": "^0.5.1",
		"rimraf": "^2.6.2"
	}
}
